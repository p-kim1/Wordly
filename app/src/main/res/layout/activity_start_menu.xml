<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    tools:context=".startMenu">

    <TextView
        android:id="@+id/startMenu_TextView_fromWord"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="fromWord"
        android:textSize="15sp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/startMenu_TextView_toWord"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/startMenu_TextView_toWord"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textSize="15sp"
        android:text="toWord"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/startMenu_TextView_fromWord"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/startMenu_Button_newPuzzle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Puzzle"
        app:layout_constraintTop_toBottomOf="@+id/startMenu_TextView_fromWord"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/startMenu_Button_play"/>

    <Button
        android:id="@+id/startMenu_Button_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        app:layout_constraintTop_toBottomOf="@+id/startMenu_TextView_fromWord"
        app:layout_constraintLeft_toRightOf="@id/startMenu_Button_newPuzzle"
        app:layout_constraintRight_toRightOf="parent"/>



</android.support.constraint.ConstraintLayout>